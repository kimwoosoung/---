#include <stdio.h>

int main() {
    int n,cnt=0,sum=0;
    scanf("%d",&n);
    for (int i=0;i!=n;i++){
        for (int j=0;j!=n;j++){
            cnt+=1;
            if (i==0 || i==n-1){
                sum+=cnt;
            }
            else if (j==0 || j==n-1){
                sum+=cnt;
            }
        }
    }
    printf("%d",sum);
    return 0;
}
